#include<stdio.h>

float plusNumber(float a, float b) {
    float result = a + b;
    return result;
}

float minusNumber(float a, float b) {
    float result = a - b;
    return result;
}

float multiNumber(float a, float b) {
    float result = a * b;
    return result;
}

float divideNumber(float a, float b) {
    float result = a / b;
    return result;
}

int main() {
    float num1;
    float num2;
    char operators;
    float result;
    
    printf("Enter first number:");
    scanf("%f", &num1);
    
    printf("Select operator (+, -, *, /):");
    scanf(" %c", &operators);
    
    printf("Enter second number:");
    scanf("%f", &num2);
    
    if (operators == '+') {
        result = plusNumber(num1, num2);
        printf("Result: %f", result);
    }
    if (operators == '-') {
        result = minusNumber(num1, num2);
        printf("Result: %f", result);
    }
    if (operators == '*') {
        result = multiNumber(num1, num2);
        printf("Result: %f", result);
    }
    if (operators == '/') {
        if (num2 == 0) {
            printf("Undefined");
            return 0;
        }
        result = divideNumber(num1, num2);
        printf("Result: %f", result);
    }

    return 0;
}